{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "~/lib/*": ["./lib/*"],
      "~/src/*": ["./src/*"]
    }
  },

  "exclude": ["node_modules/**/*", "**/*.js", "denoRuntime/**/*"]
}
