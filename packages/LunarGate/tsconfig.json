{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "~/lib/*": ["./lib/*"],
      "~/src/*": ["./src/*"]
    }
  },

//  "include": [
//    "ApplicationBuilder/src/index.ts"
//  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.js",
    "denoRuntime/**/*",
    "ApplicationBuilder/**/*",
    "utils/**/*",
    "./*.d.ts"
  ]
}
