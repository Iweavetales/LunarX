{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "stripInternal": true,
    "declaration": true,
    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "~/core/*": ["./core/*"]
    },
    "types": ["./types.d.ts"]
  },

  "exclude": [
    "node_modules",
    "**/*.js",
    "utils/**/*",
    "*.d.ts",
    "react-router-dom",
    "deno-runtime/**/*"
  ]
}
